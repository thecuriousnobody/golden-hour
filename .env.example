# Golden Hour - Environment Variables
# Copy this file to .env and fill in your values

# Anthropic (Claude API for triage)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Twilio (SMS and Voice)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Bhashini (Indian language STT)
BHASHINI_API_KEY=your_bhashini_key_here
BHASHINI_USER_ID=your_bhashini_user_id_here

# Sarvam AI (fallback STT)
SARVAM_API_KEY=your_sarvam_key_here

# Firebase (push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json

# Database
DATABASE_URL=postgresql://golden_hour:password@localhost:5432/golden_hour
REDIS_URL=redis://localhost:6379/0

# Application
APP_ENV=development
APP_PORT=8000
LOG_LEVEL=INFO
